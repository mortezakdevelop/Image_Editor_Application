<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.HomeFragment">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/landing_background_image" />

        <View
            android:id="@+id/view_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/landing_background" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_saveImage"
            android:layout_width="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Save Image"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            app:cornerRadius="@dimen/_20sdp"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginBottom="@dimen/_12sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:backgroundTint="@color/buttonEditSavedImage"
            android:layout_height="@dimen/_45sdp" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:id="@+id/btn_editNewImage"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            app:cornerRadius="@dimen/_20sdp"
            android:textSize="@dimen/_12ssp"
            android:text="Edit New Image"
            android:textAllCaps="false"
            android:backgroundTint="@color/buttonEditNewImage"
            app:layout_constraintBottom_toTopOf="@id/btn_saveImage"
            android:layout_height="@dimen/_45sdp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_subTitle"
            android:textColor="@color/white"
            android:textSize="@dimen/_13ssp"
            android:includeFontPadding="false"
            android:layout_marginEnd="@dimen/_16sdp"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_14sdp"
            android:text="Let's create something new!"
            app:layout_constraintBottom_toTopOf="@id/btn_editNewImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            app:layout_constraintBottom_toTopOf="@id/tv_subTitle"
            android:text="Image Filters"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_bold"
            android:textSize="@dimen/_20ssp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_6sdp"
            android:includeFontPadding="false"
            android:layout_height="wrap_content" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>